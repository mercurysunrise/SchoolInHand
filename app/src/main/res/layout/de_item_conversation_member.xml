<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rc_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <io.rong.imkit.widget.AsyncImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/px_to_dip_112"
        android:layout_height="@dimen/px_to_dip_112"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/px_to_dip_15"
        android:layout_marginTop="@dimen/px_to_dip_15"
        android:src="@drawable/rc_default_portrait"
        app:defDrawable="@drawable/rc_default_portrait"
        app:shape="square" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_to_dip_20"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="用户名"
        android:textColor="#252525"
        android:textSize="@dimen/px_to_dip_30"></TextView>

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="@dimen/px_to_dip_45"
        android:layout_height="@dimen/px_to_dip_45"
        android:padding="@dimen/px_to_dip_5"
        android:src="@drawable/rc_mebmer_delete" />

</RelativeLayout>