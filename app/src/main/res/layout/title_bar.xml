<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:orientation="horizontal" 
    android:background="#168bd3">
   
    <Button
        android:id="@+id/btn_title_left"
        android:layout_marginRight="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/top_left_button"
        android:text="返回"
        android:layout_marginLeft="7px"
        android:lines="1"
        android:textSize="12sp"
        android:textColor="#ffffffff"/>
     <TextView 
        android:id="@+id/tv_top_title"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:text="Toptitle"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:lines="1"
        android:textSize="19sp"
        android:textColor="#ffffffff"/>
    <Button
        android:id="@+id/btn_title_share"
        android:layout_marginLeft="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/top_right_button"
        android:text="分享"
        android:lines="1"
        android:textSize="12sp"
        android:textColor="#ffffffff" android:visibility="gone"/>

    

</LinearLayout>