<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/navigation_drawer_row_header_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="3dp"
        android:background="@color/navigation_drawer_item_header_separator_color"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/navigation_drawer_row_icon"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:contentDescription="@string/icone" />

        <TextView
            android:id="@+id/navigation_drawer_row_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@color/navigation_drawer_item_title_color"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/navigation_drawer_row_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@color/navigation_drawer_item_header_color"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>